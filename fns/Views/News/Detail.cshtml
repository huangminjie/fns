@model fns.Models.Admin.VModels.vNews
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - fns</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .title {
            word-break: break-word !important;
            word-break: break-all;
            margin: 50px 0 0;
            font-family: -apple-system,SF UI Display,Arial,PingFang SC,Hiragino Sans GB,Microsoft YaHei,WenQuanYi Micro Hei,sans-serif;
            font-size: 34px;
            font-weight: 700;
            line-height: 1.3;
            text-align:center;
        }
        #divNewsDetail {
            text-align:center;
        }
        #divNewsDetail p{
            text-align: left;
        }
        #divNewsDetail img {
            text-align:center;
            max-width:100%;
            height:auto;
        }

    </style>
</head>
<body>
    <div id="divNewsDetail" class="container">
        <h1 class="title">@Model.title</h1>
        <div style="width:90%;margin:20px auto; text-align:center;">@Model.auth</div>
        <div id="divNewsContent"></div>
        <input type="hidden" id="txtDetail" value="@Model.content" />
    </div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(function () {
        $("#divNewsContent").html($("#txtDetail").val());
    })
</script>
</body>
</html>