<script>
    $(function () {

        //$("#tbNews").load("/News/Items", { "ps": @@(Model.ps), "pi": @@(Model.pi)}, function () { });

        $('#paginationNewsList.pagination').jqPaginator({
            totalPages: @(totalPages),
            visiblePages: @(Model.ps),
            currentPage: @(Model.pi),
            onPageChange: function (pi, type) {
                $('#text').html('当前第' + pi + '页');
                $("#tbNews").load("/News/Items", { "ps": @(Model.ps), "pi": pi}, function () { });
            }
        });

    })
</script>