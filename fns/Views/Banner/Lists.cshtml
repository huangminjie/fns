<link rel="stylesheet" href="/css/banner/banner.css">
<script type="text/javascript" src="/js/banner/banner.js"></script>


<div class="btn-toolbar">
    <button class="btn btn-primary" onclick="openModal()">新建</button>
</div>
<div class="well">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>类目</th>
                <th>图片</th>
                <th>链接地址</th>
                <th>类型</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="modalTitle">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="modalTitle"></h4>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" id="id">
                    <div class="form-group">
                        <label for="redirectUrl">链接</label>
                        <input type="text" class="form-control" id="linkUrl" placeholder="外链链接">
                    </div>
                    <div class="form-group">
                        <label for="duration">新闻类目</label>
                        <select id="cid"></select>
                    </div>
                    <div class="form-group">
                        <label for="duration">跳转类型</label>
                        <select id="type">
                            <option value="1">应用内</option>
                            <option value="2">应用外</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="custom-file-upload">
                            <input type="file" id="upload" accept="image/gif,image/jpeg,image/jpg,image/png,image/svg" onchange="imgPreview(this)">
                            图片上传
                        </label>
                        <img id="preview" />
                        <input type="hidden" id="picUrl" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary" onclick="save()">保存</button>
            </div>
        </div>
    </div>
</div>